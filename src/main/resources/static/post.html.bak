<!DOCTYPE html>
<html lang="ko">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Velog Clone</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://uicdn.toast.com/editor/latest/toastui-editor-viewer.min.css" />
    <link href="/css/style.css" rel="stylesheet">
    <style>
        /* Specific overrides for Toast UI Viewer to match Velog */
        .toastui-editor-contents {
            font-size: 1.125rem;
            font-family: inherit;
        }

        .toastui-editor-contents h1,
        .toastui-editor-contents h2,
        .toastui-editor-contents h3 {
            border-bottom: none;
            margin-top: 2rem;
            margin-bottom: 1rem;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg sticky-top">
        <div class="container px-4">
            <a class="navbar-brand" href="/">valog</a>
            <div class="d-flex align-items-center gap-2">
                <div id="auth-buttons">
                    <a href="/login.html" class="btn btn-dark rounded-pill">로그인</a>
                </div>
            </div>
        </div>
    </nav>

    <div class="post-detail-container">
        <div id="post-header">
            <!-- Title and meta injected here -->
        </div>

        <div id="viewer" class="post-content-body mt-5"></div>

        <div class="mt-5 pt-5 border-top" id="admin-controls" style="display: none;">
            <button id="delete-btn" class="btn btn-outline-danger">삭제</button>
            <!-- Edit button needs ID or Slug, we will inject it -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://uicdn.toast.com/editor/latest/toastui-editor-viewer.min.js"></script>
    <script src="/js/app.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', async () => {
            const urlParams = new URLSearchParams(window.location.search);
            const slug = urlParams.get('slug');

            if (!slug) {
                alert('잘못된 접근입니다.');
                window.location.href = '/';
                return;
            }

            try {
                const post = await App.api.get(`/api/public/posts/${slug}`);
                document.title = post.title + ' - Velog Clone';

                // Render Header
                const date = App.formatDate(post.publishedAt);
                const tagsHtml = post.tags.map(t => `<span class="badge bg-light text-secondary rounded-pill me-1 fs-6 fw-normal">${t}</span>`).join('');

                document.getElementById('post-header').innerHTML = `
                    <h1 class="post-head-title">${post.title}</h1>
                    <div class="post-head-meta d-flex align-items-center">
                        <span class="fw-bold text-dark">${post.author}</span>
                        <span>·</span>
                        <span>${date}</span>
                    </div>
                    <div class="mb-4">
                        ${tagsHtml}
                    </div>
                `;

                // Render Markdown
                const Viewer = toastui.Editor.factory;
                const viewer = new Viewer({
                    el: document.querySelector('#viewer'),
                    viewer: true,
                    initialValue: post.contentMd
                });

                // Check Auth for Admin actions
                const user = await App.checkAuth();
                if (user) {
                    const adminControls = document.getElementById('admin-controls');
                    adminControls.style.display = 'block';

                    const editBtn = document.createElement('a');
                    editBtn.className = 'btn btn-outline-secondary me-2';
                    editBtn.innerText = '수정';
                    editBtn.href = `/write.html?id=${post.id}`;

                    adminControls.prepend(editBtn);

                    document.getElementById('delete-btn').addEventListener('click', async () => {
                        if (confirm('정말 삭제하시겠습니까?')) {
                            try {
                                await App.api.get(`/api/admin/posts/${post.id}`, { method: 'DELETE' }); // Wait api.get is GET.
                                // Actually App.api has no delete method, and get with {method:DELETE} is wrong because get uses fetch(url) only.
                                // Let's use raw fetch or fix App.api.
                                await fetch(`/api/admin/posts/${post.id}`, { method: 'DELETE' });
                                window.location.href = '/';
                            } catch (e) {
                                alert('삭제 실패');
                            }
                        }
                    });

                    // Update header Request
                    const authButtons = document.getElementById('auth-buttons');
                    authButtons.innerHTML = `
                        <a href="/write.html" class="btn btn-outline-dark me-2 rounded-pill">새 글 작성</a>
                        <button onclick="App.logout()" class="btn btn-dark rounded-pill">로그아웃</button>
                   `;
                }

            } catch (e) {
                console.error(e);
                alert('포스트를 불러오는데 실패했습니다.');
            }
        });
    </script>
</body>

</html>